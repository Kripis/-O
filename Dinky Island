#include <iostream>
#include <cstdlib>
#include <time.h>
#include <string>

using namespace std;

int main()
{
    srand(time(NULL));
    int lives = 3;
    int gold = 100;
    int coordinate_y = 0;
    int coordinate_x = 0;
    string direction;
    string events[4] {"You find 100 gold.", "You get 1 life.", "You found a gemstone, worth 1000.", "You are attacked by a troll, you kill him but lose 1 life."};


    cout << "Welcome to Dinky Island\n" << endl;
    cout << "\nYou find yourself stranded in the middle of an island, you see a sign that says 'DINKY ISLAND'" << endl;
    cout << "\nWhere do you wish to go? (north, west, south, east)" << endl;

    while (lives >= 0)
    {
        cin >> direction;

        int arrayChooser = (rand() % 4);
        int arrayC = arrayChooser;

        if (direction == "north")
        {
            cout << "You went north.\n" << endl;
            coordinate_y++;
            cout << events[arrayChooser] << endl;
            cout << "Your lives are: " << lives << " and your gold is: " << gold << endl;
            cout << "\nYour current position is: " << coordinate_y << "; " << coordinate_x << endl;

        switch (arrayC)
{

        case 1:
            gold += 100;

        case 2:
            lives + 1;

        case 3:
            gold += 1000;

        case 4:
            lives =- 1;
}
        }
        if (direction == "west")
        {
            cout << "You went west.\n" << endl;
            coordinate_x--;
            cout << events[arrayChooser] << endl;
            cout << "Your lives are: " << lives << " and your gold is: " << gold << endl;
            cout << "\nYour current position is: " << coordinate_y << "; " << coordinate_x << endl;

        switch (arrayC)
{

        case 1:
            gold += 100;

        case 2:
            lives + 1;

        case 3:
            gold += 1000;

        case 4:
            lives =- 1;
}
        }
        if (direction == "south")
        {
            cout << "You went south.\n" << endl;
            coordinate_y--;
            cout << events[arrayChooser] << endl;
            cout << "Your lives are: " << lives << " and your gold is: " << gold << endl;
            cout << "\nYour current position is: " << coordinate_y << "; " << coordinate_x << endl;

        switch (arrayC)
{

        case 1:
            gold += 100;

        case 2:
            lives + 1;

        case 3:
            gold += 1000;

        case 4:
            lives =- 1;
}
        }
        if (direction == "east")
        {
            cout << "You went east.\n" << endl;
            coordinate_x++;
            cout << events[arrayChooser] << endl;
            cout << "Your lives are: " << lives << " and your gold is: " << gold << endl;
            cout << "\nYour current position is: " << coordinate_y << "; " << coordinate_x << endl;

        switch (arrayC)
{

        case 1:
            gold += 100;

        case 2:
            lives + 1;

        case 3:
            gold += 1000;

        case 4:
            lives =- 1;
}
        }
    }




    return 0;
}
