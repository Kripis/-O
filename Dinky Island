#include <iostream>
#include <cstdlib>
#include <time.h>
#include <string>

using namespace std;

int main()
{
    srand(time(NULL));
    int lives = 3;
    int gold = 100;
    int coordinate_y = 0;
    int coordinate_x = 0;
    string direction;
    int arrayChooser = (rand() % 4);
    string events[4] {"You find 100 gold", "You get 1 life", "You found a gemstone, worth 1000", "You are attacked by a troll, you kill him without losing health!"};


    cout << "Welcome to Dinky Island\n" << endl;
    cout << "\nYou find yourself stranded in the middle of an island, you see a sign that says 'DINKY ISLAND'" << endl;
    cout << "\nWhere do you wish to go? (north, west, south, east)" << endl;

    while (lives >= 0)
    {
        cin >> direction;

        if (direction == "north")
        {
            cout << "You went north." << endl;
            coordinate_y++;
            cout << events[arrayChooser] << endl;
            cout << "Your current position is: " << coordinate_y << "; " << coordinate_x << endl;
        }
        if (direction == "west")
        {
            cout << "You went west." << endl;
            coordinate_x--;
            cout << events[arrayChooser] << endl;
            cout << "Your current position is: " << coordinate_y << "; " << coordinate_x << endl;
        }
        if (direction == "south")
        {
            cout << "You went south." << endl;
            coordinate_y--;
            cout << events[arrayChooser] << endl;
            cout << "Your current position is: " << coordinate_y << "; " << coordinate_x << endl;
        }
        if (direction == "east")
        {
            cout << "You went east." << endl;
            coordinate_x++;
            cout << events[arrayChooser] << endl;
            cout << "Your current position is: " << coordinate_y << "; " << coordinate_x << endl;
        }
    }




    return 0;
}
